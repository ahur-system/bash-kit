[Unit]
Description=bash-kit proxy watcher service
After=network.target
Wants=network.target

[Service]
Type=simple
Restart=always
RestartSec=10
Environment=HOME=/usr/local/bash-kit/tools/proxy_watcher/data
ExecStart=/usr/local/bin/proxy_watcher
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
